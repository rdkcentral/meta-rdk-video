[Unit]
Description=Thunder Hang Detection and Recovery
After=wpeframework.service
Requires=wpeframework.service

[Service]
ExecStartPre=/bin/sh -c 'rm -rf /opt/thunderHangDetector'
ExecStartPre=/bin/sh -c 'mkdir -p /opt/thunderHangRecovery'
ExecStart=/usr/bin/thunderHangRecovery
Type=simple
Restart=always

[Install]
WantedBy=multi-user.target
